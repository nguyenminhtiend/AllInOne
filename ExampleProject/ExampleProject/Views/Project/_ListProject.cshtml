@model ExampleProject.Models.ProjectSearchModel

@{
    Layout = null;
}
<table class="table">
    <tr>
        <th>Name
            <span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
        </th>
        <th>Number
            <span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
        </th>
        <th>Customer
            <span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
        </th>
        <th>Status
            <span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
        </th>
        <th>StartDate
            <span class="glyphicon glyphicon-sort" aria-hidden="true"></span>
        </th>
        <th>EndDate
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Projects)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Customer)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>@Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>@Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a data-toggle="modal" data-target="#exampleModal" data-whatever="@item.Id">Edit</a> |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

@Html.Partial("Pagination",Model.Page)
